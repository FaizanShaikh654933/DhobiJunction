<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_marginTop="20dp"
            android:textColor="@android:color/black"
            android:layout_marginLeft="20dp"
            android:id="@+id/o_title"
            android:text="Title :-"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/o_t1"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="50dp"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/o_title"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            android:layout_marginLeft="20dp"
            android:id="@+id/o_code"
            android:layout_below="@id/o_title"
            android:text="Code :-"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/o_t2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/o_title"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/o_code"
            android:textSize="18sp" />

        <TextView
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            android:layout_marginLeft="20dp"
            android:id="@+id/o_price"
            android:layout_below="@id/o_code"
            android:text="Discount :-"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/o_t3"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/o_code"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/o_price"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/o_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/o_code"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/o_t3"
            android:background="@drawable/ic_baseline_delete_24" />

        <TextView
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            android:layout_marginLeft="20dp"
            android:id="@+id/o_date"
            android:layout_below="@id/o_delete"
            android:text="Date :-"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/o_t4"
            android:layout_below="@id/o_delete"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="50dp"
            android:textSize="18sp"
            android:layout_toRightOf="@id/o_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>